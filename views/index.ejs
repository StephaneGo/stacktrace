<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <h1>Tickets</h1>

    <h2>Ajouter un ticket</h2>
    <form action="/tickets" method="post">
      <div>
        <label for="titre">Titre *</label>
        <input
          type="text"
          name="titre"
          id="titre"
          value="<%=typeof ticket !== 'undefined'? ticket.titre: ''%> "
        />
        <% if (typeof errors !== 'undefined' && errors.find(e=>e.path=='titre'))
        { %>
        <div class="color-error">
          <%= errors.find(e=>e.path=='titre').msg %>
        </div>
        <% } %>
      </div>
      <div>
        <label for="description">Description *</label>
        <input
          type="text"
          name="description"
          id="description"
          value="<%=typeof ticket !== 'undefined'? ticket.description: ''%>"
        />
        <% if (typeof errors !== 'undefined' &&
        errors.find(e=>e.path=='description')) { %>
        <div class="color-error">
          <%= errors.find(e=>e.path=='description').msg %>
        </div>
        <% } %>
      </div>
      <button type="submit">Ajouter</button>
    </form>

    <% for (let i = 0; i < tickets.length; i++) { %>
    <div>
      <h2>
        <a href="/tickets/<%= tickets[i].id %>"> <%= tickets[i].titre %></a>
      </h2>
      <p><%= tickets[i].description %></p>
      <p>
        <a href="/tickets/<%= tickets[i].id %>/modifier">Modifier</a>
        <a href="/tickets/<%= tickets[i].id %>/supprimer">Supprimer</a>
      </p>
    </div>
    <% } %>
  </body>
</html>
